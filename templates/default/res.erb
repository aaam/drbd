    fencing resource-only;
  }

  device minor 0;
  disk <%= node['drbd']['disk'] %>;
  meta-disk internal;

  on <%= node['drbd']['peers'][0]['hostname'] %> {
    address <%= node['drbd']['peers'][0]['address'] %>:<%= node['drbd']['peers'][0]['port'] %>;
  }

  on <%= node['drbd']['peers'][1]['hostname'] %> {
    address <%= node['drbd']['peers'][1]['address'] %>:<%= node['drbd']['peers'][1]['port'] %>;
  }
}
